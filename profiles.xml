{% for name in ['virus', 'spyware'] %}
<{{ name }}>
  <entry name="{{ profile_name }}">
    <decoder>
      <entry name="http">
        <action>{{ action_normal }}</action>
        <wildfire-action>{{ action_wildfire }}</wildfire-action>
      </entry>
      <entry name="smtp">
        <action>{{ action_normal }}</action>
        <wildfire-action>{{ action_wildfire }}</wildfire-action>
      </entry>
      <entry name="imap">
        <action>{{ action_normal }}</action>
        <wildfire-action>{{ action_wildfire }}</wildfire-action>
      </entry>
      <entry name="pop3">
        <action>{{ action_normal }}</action>
        <wildfire-action>{{ action_wildfire }}</wildfire-action>
      </entry>
      <entry name="ftp">
        <action>{{ action_normal }}</action>
        <wildfire-action>{{ action_wildfire }}</wildfire-action>
      </entry>
      <entry name="smb">
        <action>{{ action_normal }}</action>
        <wildfire-action>{{ action_wildfire }}</wildfire-action>
      </entry>
    </decoder>
  </entry>
</{{ name }}>
{% endfor %}